{
  "compilerOptions": {
    "target": "ES2022",

    /* ðŸ”‘ THIS FIXES console / process / Node globals */
    "lib": ["ES2022"],
    "types": ["node"],

    /* ESM + NodeNext (matches your package.json "type": "module") */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Safety */
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Required for Render */
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}